<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/green"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/list_item_selector"
        android:gravity="center" >

        <ImageView
            android:id="@+id/gallery_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gallery_left"
            android:layout_marginRight="@dimen/gallery_right_small"
            android:background="@drawable/ic_launcher"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder_big" />

        <TextView
            android:id="@+id/gallery_title_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:gravity="bottom|center"
            android:text="@string/recommend"
            android:textSize="@dimen/common_text_five" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/list_item_selector"
        android:gravity="center" >

        <ImageView
            android:id="@+id/gallery_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gallery_left_small"
            android:layout_marginRight="@dimen/gallery_right_small"
            android:background="@drawable/ic_launcher"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder_big" />

        <TextView
            android:id="@+id/gallery_title_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="@string/recommend"
            android:textSize="@dimen/common_text_five" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/list_item_selector"
        android:gravity="center" >

        <ImageView
            android:id="@+id/gallery_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gallery_left_small"
            android:layout_marginRight="@dimen/gallery_right"
            android:background="@drawable/ic_launcher"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder_big" />

        <TextView
            android:id="@+id/gallery_title_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="@string/recommend"
            android:textSize="@dimen/common_text_five" />
    </FrameLayout>

</LinearLayout>